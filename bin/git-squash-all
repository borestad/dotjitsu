#!/bin/sh
#
# Squashes history between two commits


DATE=$(date '+%Y/%m/%d %H:%M')
LABEL="SQUASHED"
TEXT="\`Ô∏èÔ∏è‚ö°Ô∏è $LABEL ‚ö°Ô∏è\` \`$DATE\`"

MSG=${1:-$TEXT}

echo "‚úî Squash all commits"
git reset $(git commit-tree HEAD^{tree} -m "$MSG");

echo '‚úî Remove all tags'
git tag -l | xargs git tag -d

echo
echo '‚úî Clear the reflog:'
git reflog expire --expire=now --expire-unreachable=all --all --verbose

echo
echo '‚úî List all unreachable objects:'
#git fsck --unreachable

echo
echo '‚úî Delete all dangling objects'
git gc --prune=now


echo
echo '...done!'
echo
echo "(üí° Don't forget to git push)"

