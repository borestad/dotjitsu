#!/usr/bin/env bash
set -m
LOG_LOCATION="$HOME/logs/cron-minute/`date +%F`"
TERM="xterm-256color"

mkdir -p $LOG_LOCATION

exec > >(tee -i $LOG_LOCATION/cron-minute-`date +%F--%H%M%S`.log)
exec 2>&1


echo ""

t () {
  date "+%F %H:%M:%S"
}

