#!/usr/bin/env bash
set -m

echo "TERM=$TERM"
source ~/.dotjitsu/.env$

LOG_LOCATION=~/logs/cron/minute/`date +%F`
mkdir -p $LOG_LOCATION

exec > >(tee -i $LOG_LOCATION/cron-minute-`date +%F--%H%M%S`.log)
exec 2>&1

# echo -e "\n‚ñ†‚ñ†‚ñ† PATH"
# echo $PATH

# echo -e "\n‚ñ†‚ñ†‚ñ† dot-rsync"
# dot-rsync

/opt/homebrew/bin/fd . ~/logs/ --change-older-than 7days -x rm -rfv

echo "All done! Enjoy a cold one! üç∫ "
