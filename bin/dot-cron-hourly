#!/usr/bin/env bash
set -m
LOG_LOCATION="$HOME/logs/hourly"
TERM="xterm-256color"

mkdir -p $LOG_LOCATION

exec > >(tee -i $LOG_LOCATION/cron-hourly-`date +%F--%H%M%S`.log)
exec 2>&1

/usr/local/bin/mr run fetch

echo ""

t () { date "+%F %H:%M:%S" }
echo "All done! Enjoy a cold one! ğŸº "

echo ""
/Users/johan/.dotjitsu/bin/hr -
