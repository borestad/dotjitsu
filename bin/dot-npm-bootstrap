#!/usr/bin/env zsh
npm set progress=true

packages=(
  bcat
  bower
  browser-run
  casperjs
  coffee-script
  david
  debug
  electron-prebuilt
  esformatter
  gatsby
  http-server
  js2coffee
  diff-so-fancy
  jscodeshift
  jscs
  jshint
  jsinspect
  jslint
  livescript
  node-debugger
  n_
  npm-cache
  npm-check
  pen.md
  phantomjs-prebuilt
  public-ip
  rtail
  shipit-cli
  tmpin
  vantage
  vtop
  webpack
  webpack-bundle-size-analyzer
  webpack-dev-server
  yo
  yarn
)

npm set progress=false

# for pkg in $packages; do  
#   hr -
#   echo "Uninstalling ${pkg}"
#   npm un -g "${pkg}"
# done

for pkg in $packages; do  
  hr -
  echo "Installing ${pkg}"
  NODE_ENV=production npm i -g "${pkg}@latest"
done

npm set progress=true
