#!/usr/bin/env zsh

cd "$(dirname $0)"/..

echo ''; hr - '#' -
echo "[BREW CASK FORMULAS]\n"

brew -v update
brew -v bundle --file=$DOTJITSU/Caskfile.bootstrap
brew -v upgrade --file=$DOTJITSU/Caskfile.bootstrap

# Fix for broken 'brew cask'
for c in `brew cask list`; do ! brew cask info $c | grep -qF "Not installed" || brew cask install $c; done
