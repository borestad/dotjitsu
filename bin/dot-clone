#!/usr/bin/env zsh

# Include helpers
. `dirname $0`/_helpers

echo "Updating ZSH Frameworks ...\n"

mkdir -p $HOME/.repos

line 'Antigen'
git_clone_or_pull \
	'https://github.com/zsh-users/antigen.git' $HOME/.repos/antigen


line 'oh-my-zsh'
git_clone_or_pull \
	'https://github.com/robbyrussell/oh-my-zsh.git' $HOME/.repos/oh-my-zsh

line 'Zgen'
git_clone_or_pull \
	'https://github.com/tarjoilija/zgen.git' $HOME/.repos/zgen


line 'Prezto'
git_clone_or_pull \
	'https://github.com/sorin-ionescu/prezto.git' $HOME/.zprezto

line 'Git friendly'
git_clone_or_pull \
	'https://github.com/jamiew/git-friendly.git' $HOME/.repos/git-friendly

line 'Powerline fonts'
git_clone_or_pull \
	'https://github.com/powerline/fonts.git' $HOME/.repos/powerline-fonts
cd $HOME/.repos/powerline-fonts && ./install.sh

line 'Better npm'
git_clone_or_pull \
	'https://github.com/lukechilds/zsh-better-npm-completion.git' $HOME/.repos/zsh-better-npm-completion

line 'Git subrepo'
git_clone_or_pull \
	'https://github.com/ingydotnet/git-subrepo.git' $HOME/.repos/git-subrepo

