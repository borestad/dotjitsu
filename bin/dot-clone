#!/usr/bin/env zsh

# Include helpers
. `dirname $0`/_helpers

echo "Updating ZSH Frameworks ...\n"

mkdir -p $HOME/.repos

cd $HOME

hr
mr status | sed '/^[[:space:]]*$/d'
hr

mr update -j8

cd $HOME/.repos
for f in *; do
    if [ -d "$f" ]; then
        # Will not run if no directories are available
        cd $f
        fix-git-https-to-git &> /dev/null
        mr register
        cd ..
    fi
done
