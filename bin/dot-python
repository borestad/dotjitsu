# upgrade to latest pip3
# python -m pip3 install --upgrade pip3
PIP='pip3.11'
PYTHON='python3.11'
hr; $PYTHON -m pip install --upgrade pip
hr; $PIP install --upgrade setuptools
hr; $PIP install --upgrade wheel
hr; $PIP install google_images_download
