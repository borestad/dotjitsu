#!/usr/bin/env zsh

cd "$(dirname $0)"/..

echo ''; hr -
echo "[Updating Python PIP's]\n"
pip install --upgrade pip
pip3 install --upgrade pip

# Glances + deps
sudo -H pip3 install --upgrade glances
sudo -H pip3 install --upgrade bottle py-cpuinfo pysnmp zeroconf netifaces statsd pystache matplotlib pika

# Colors
sudo -H pip3 install --upgrade pygments

# Sen
pip3 install --upgrade urwid
pip3 install --upgrade sen

# Utils
pip3 install --upgrade ffind
