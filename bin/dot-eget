#!/usr/bin/env bash

mkdir -p ~/.local/bin

function brew-assert-exist() {
  if ! command -v $1 > /dev/null 2>&1; then brew install $1; fi
}

brew-assert-exist eget
brew-assert-exist bkt

function dl() {
  bkt --ttl 60min -- eget "$1"
}

dl aaronriekenberg/rust-parallel
dl projectdiscovery/katana
dl probablykasper/cpc
dl natesales/q
dl toumorokoshi/tome
dl darakian/ddh
dl mergestat/mergestat-lite
dl s0rg/crawley

