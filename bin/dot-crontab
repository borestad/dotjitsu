# run-parts
(crontab -l ; echo "01 * * * * root run-parts /etc/cron.hourly") | sort - | uniq - | crontab -
(crontab -l ; echo "02 4 * * * root run-parts /etc/cron.daily") | sort - | uniq - | crontab -
(crontab -l ; echo "22 4 * * 0 root run-parts /etc/cron.weekly") | sort - | uniq - | crontab -
(crontab -l ; echo "42 4 1 * * root run-parts /etc/cron.monthly") | sort - | uniq - | crontab -

