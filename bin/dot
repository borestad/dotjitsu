#!/usr/bin/env zsh

ROOT=$(git rev-parse --show-toplevel)
cd $ROOT

brew install fnm ncdu gdu git tig hr htop binutils coreutils findutils sd mr gnu-sed bat exa fzf fd zsh svn grc fasd git-extras thefuck

~/.dotjitsu/bin/dot-brew-core

eval "$(fnm env)"
fnm install --lts
fnm default lts-latest


# if [ ! type "brew" &> /dev/null ]; then
# 	ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
# fi

~/.dotjitsu/bin/dot-clone

~/.dotjitsu/bin/pull $HOME/.dotjitsu
~/.dotjitsu/bin/pull $HOME/.private


ln -sfv ~/.dotjitsu/.zshrc ~/
. ~/.dotjitsu/.env$
~/.dotjitsu/bin/dot-symlink
~/.private/bin/dotp-symlink

~/.private/bin/dot-crontab
~/.dotjitsu/bin/dot-npm-bootstrap

#brew link git-annex
#brew link git-lfs



