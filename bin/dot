#!/usr/bin/env zsh

ROOT=$(git rev-parse --show-toplevel)
cd $ROOT

brew install fnm ncdu git tig hr htop binutils coreutils findutils sd mr svn gnu-sed bat exa fzf fd zsh

eval "$(fnm env)"
fnm install --lts
fnm default lts-latest


