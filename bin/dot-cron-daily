#!/usr/bin/env bash
set -m
LOG_LOCATION="$HOME/logs/cron-daily"
TERM="xterm-256color"

mkdir -p $LOG_LOCATION

exec > >(tee -i $LOG_LOCATION/cron-daily-`date +%F--%H%M%S`.log)
exec 2>&1


echo ""

t () {
  date "+%F %H:%M:%S"
}


hr && $HOME/.dotjitsu/bin/dot-node-latest-lts | bat -f
hr && $HOME/.dotjitsu/bin/dot-brew | bat -f
hr && $HOME/.dotjitsu/bin/dot-cask | bat -f
hr && /usr/local/bin/brew upgrade --cask | bat -f




echo ""

echo "All done! Enjoy a cold one! üç∫ "

echo ""
/Users/johan/.dotjitsu/bin/hr -
