#!/usr/bin/env bash
set -m
LOG_LOCATION="$HOME/logs/cron-daily"
TERM="xterm-256color"

mkdir -p $LOG_LOCATION

exec > >(tee -i $LOG_LOCATION/cron-daily-`date +%F--%H%M%S`.log)
exec 2>&1


echo ""

t () {
  date "+%F %H:%M:%S"
}

echo "`t`: START:   dot-brew start"
$HOME/.dotjitsu/bin/dot-brew
echo "`t`: STOP:    dot-brew end"

echo "`t`: START:   dot-cask start"
$HOME/.dotjitsu/bin/dot-cask
echo "`t`: STOP:    dot-cask end"

echo "`t`: START:   dot-cask start"
/usr/local/bin/brew cask upgrade
echo "`t`: STOP:    dot-cask end"



echo ""

echo "All done! Enjoy a cold one! üç∫ "

echo ""
/Users/johan/.dotjitsu/bin/hr -
