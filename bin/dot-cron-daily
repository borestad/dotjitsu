#!/usr/bin/env zsh
set -m

export PATH="/opt/homebrew/bin:/opt/homebrew/sbin${PATH+:$PATH}";
export TERM='xterm-256color'
LOG_LOCATION="$HOME/logs/cron/daily"
TERM="xterm-256color"

mkdir -p $LOG_LOCATION

exec > >(tee -i $LOG_LOCATION/cron-hourly-`date +%F--%H%M%S`.log)
exec 2>&1


hr && $HOME/.dotjitsu/bin/dot-node-latest-lts | bat -f
hr && $HOME/.dotjitsu/bin/dot-brew | bat -f
hr && $HOME/.dotjitsu/bin/dot-cask | bat -f
hr && $HOMEBREW_PREFIX/bin/brew upgrade --cask | bat -f


echo "All done! Enjoy a cold one! üç∫ "
