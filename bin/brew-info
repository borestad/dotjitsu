#!/usr/bin/env bash


FZF_DEFAULT_OPT="--layout=reverse --border --inline-info --pointer=Â» --height=100"

cat ~/.config/cache/brew-formula.json | jq '.[] | "\(.name) | \(.desc) | \(.homepage)"' \
| sd '"' '' | sd 'null' '' | column -t -s'|' | fzf --reverse -e --no-hscroll --height=100 +s --bind='ctrl-s:toggle-sort' -q $1
