#!/usr/bin/env bash

IS_IP4='(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)'

if [ "$#" -eq 1 ]; then
    SEARCH="$1"
elif [ "$#" -eq 2 ]; then
    DNSSERVER="$1"
    SEARCH="$2"
else
  echo "Usage: digit [@dnsserver] [domain/ip/url]"
  exit 1
fi

# Extract hostname if SEARCH looks like a URL
if [[ "$SEARCH" =~ ^https?:// ]]; then
  SEARCH=$(echo "$SEARCH" | sed -E 's|^[^/]*//([^/:]+).*|\1|')
fi

if [[ "$SEARCH" =~ ^[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+$ ]]; then
  # Reverse ip lookup
  QUERY="-x $SEARCH"
else
  # Domain lookup
  QUERY="+short $SEARCH"
fi

bkt --ttl=1d --stale=1s --discard-failures -- sh -c \
  "dig +time=5 +tries=2 +short ${DNSSERVER} ${QUERY}"
