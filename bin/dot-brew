#!/usr/bin/env bash
set -Eeuo pipefail

# Setup
LOG_LOCATION="$HOME/logs/brew"
TERM="xterm-256color"
mkdir -p $LOG_LOCATION

formatter=""
if command -v gnomon > /dev/null 2>&1; then
  formatter="$(command -v gnomon) -t elapsed-total |"
fi

exec > >($formatter tee -i $LOG_LOCATION/dot-brew-`date +%F--%H%M%S`.log)
exec 2>&1

cd "$(dirname $0)"/..

# Update brew itself
$HOME/.dotjitsu/bin/hr -
echo "‚ú® brew update"
echo
$HOMEBREW_PREFIX/bin/brew -v update

# Install Brewfile formulas
$HOME/.dotjitsu/bin/hr -
echo "‚ú® brew bundle (Brewfile)"
echo
$HOMEBREW_PREFIX/bin/brew -v bundle --file=$HOME/.dotjitsu/Brewfile

# Update installed bundles (even those not in Brew/Caskfile
$HOME/.dotjitsu/bin/hr -
echo "‚ú® brew upgrade"
echo
$HOMEBREW_PREFIX/bin/brew -v upgrade

# Cache API-reponses
$HOME/.dotjitsu/bin/hr -
echo "‚ú® brew API"
echo

mkdir -p ~/.config/cache && cd "$_"

$HOMEBREW_PREFIX/bin/wget https://formulae.brew.sh/api/formula.json -O brew-formula.json.tmp -t 3 -q && mv brew-formula.json.tmp brew-formula.json
$HOMEBREW_PREFIX/bin/wget https://formulae.brew.sh/api/cask.json -O brew-cask.json.tmp -t 3 -q && mv brew-cask.json.tmp brew-cask.json

cat brew-formula.json | $HOMEBREW_PREFIX/bin/jq '.[] | "\(.name) | \(.desc) | \(.homepage)"' \
| $HOMEBREW_PREFIX/bin/sd '"' '' | $HOMEBREW_PREFIX/bin/sd 'null' '' | column -t -s'|' > brew-formula.txt

cat brew-cask.json | $HOMEBREW_PREFIX/bin/jq '.[] | "\(.token) | \(.desc) | \(.homepage)"' \
| $HOMEBREW_PREFIX/bin/sd '"' '' | $HOMEBREW_PREFIX/bin/sd 'null' '' | column -t -s'|' > brew-cask.txt


rm -f $HOMEBREW_PREFIX/share/zsh/site-functions/_git

echo ""
echo "All done! Enjoy a cold one! üç∫ "
echo ""
