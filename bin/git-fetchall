#!/bin/bash

# Runs `git pull` on every directory within the current directory

START=`date +%s.%N`
dir=${1:-"$PWD"}

echo "тЪбя╕П git-fetchall: $dir"
echo

cd "$dir" || { echo "$dir is not a valid directory" && exit 1; }

# TODO: Use 'mr list'
CURDIR="$(pwd)"
