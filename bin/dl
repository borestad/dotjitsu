#!/usr/bin/env bash

# set -o errexit
# set -e

#
# Argument parsing
#
CI=false

while [ "$#" -gt 0 ]; do
  case "$1" in
    -o) OUTPUT="$2"; shift 2;;
    -ttl) TTL="$2"; shift 2;;
    -ci) CI="true"; shift 1;;

    --output=*) OUTPUT="${1#*=}"; shift 1;;
    --ttl=*) TTL="${1#*=}"; shift 1;;
    --ci=*) CI="${1#*=}"; shift 1;;
    --output|--ttl|--ci) echo "$1 requires an argument" >&2; exit 1;;

    -*) echo "unknown option: $1" >&2; exit 1;;
    *) URL="$1"; shift 1;;
  esac
done

function exists() {
    builtin command -V "$1" >/dev/null 2>&1
}

if ! exists xh; then
  CI=true
fi

#
# Helpers
#

time-now() {
  date +%s.%N
}

benchmark() {
  local start=$1
  local end=${2:-$(time-now)}
  printf %.2f $(echo "$end - $start" | bc -l)
}

touch2() {
  mkdir -p "$(dirname "$1")" && touch "$1" ;
}

#
# Main
#

DIR=$(pwd)
BASENAME=$(basename $URL | sed 's/?.*//g')
OUTPUT=${OUTPUT:-$BASENAME}
TEMPDIR=$(mktemp -d)

# Precreate some fancy path (i.e a/b/c/100.zip)
touch2 "$TEMPDIR/$OUTPUT"
cd $TEMPDIR


if [[ "$CI" == "true" ]]; then
  args='--no-progress-meter --silent'
else
  args='--progress-bar'
fi

start=$(time-now)

echo "Downloading ${OUTPUT} from ${URL}"

curl \
  $args \
  --disable \
  --show-error \
  --location \
  --keepalive \
  --connect-timeout 10 \
  --retry 2 \
  --http2 \
  --fail-with-body \
  --compressed \
  -o "${OUTPUT}" \
  ${URL} 2>&1

code=$?

# cat $TEMPLOG

if [ $code -ne 0 ]; then
  echo "âŒ $URL"
  exit $code
fi

cd $DIR
touch2 $OUTPUT
mv $TEMPDIR/$OUTPUT $OUTPUT

# Cleanup
rm -rf $TEMPDIR &> /dev/null

# stop=$(benchmark $start)

# if [[ "$CI" == "true" ]]; then
#   # SIZE=$(du -bh $OUTPUT | xargs | cut -d ' ' -f1)
#   # echo "DONE ... in ${stop}s. $SIZE"
#   echo "DONE ... in ${stop}s."
# fi
