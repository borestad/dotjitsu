fd --type f --no-ignore --hidden  -E '.git' -E 'node_modules' \
| sed -r 's/.*\/([^\/]+)/\1/' \
| sed 's/^[^\.]*$/<EMPTY>/' \
| sed -r 's/.*(\.[^\.]+)$/\1/' \
| sort | uniq -c | sort -nr | bat -P -l=bash
