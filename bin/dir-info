#!/usr/bin/env zsh

dir=${1:-.}
# local dirs=`/usr/local/bin/fd . -td --hidden --exact-depth 1 | wc -l`
# local files=`/usr/local/bin/fd . -tf --hidden --exact-depth 1 | wc -l`
# local total=`/usr/local/bin/fd . --hidden --exact-depth 1 | wc -l`
#local _path=`pwd | sed "s;$HOME;~;"`

cd $dir

local dirs=`/usr/local/bin/fd . --hidden -I --exact-depth 1 -td | wc -l | tr -d '[:space:]'`
local files=`/usr/local/bin/fd . --hidden -I --exact-depth 1 -tf | wc -l | tr -d '[:space:]'`
local total=$(( ${dirs} + ${files}))

echo "$dirs dirs, $files files, $total total"
