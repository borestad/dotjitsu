#!/usr/bin/env zsh

cd "$(dirname $0)"/..

echo ''; hr - '#' -
echo "[CLEANING]\n"

dfc
echo

# Kill log files slowing down the shell
sudo rm -rfv /private/var/log/asl/*.asl

rm -rfv ./**/.DS_Store

chmod -R +x ~/.dotjitsu/bin/*

brew cleanup -s
brew prune

echo
dfc

