function clone {
  url=$1;
  reponame=$(echo $url | awk -F/ '{print $NF}' | sed -e 's/.git$//');
  git clone $url $reponame;
  cd $reponame;
  echo "" && hub log --oneline --graph --date=short -n 5 && echo ""
}


