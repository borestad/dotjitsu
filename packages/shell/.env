#!/usr/bin/env zsh

if [[ `uname` == 'Linux' ]] then export LINUX=1; else export LINUX=; fi
if [[ `uname` == 'Darwin' ]] then export OSX=1; else export OSX=; fi

unsetopt correct          # Disable ZSH annoying auto correct
unsetopt nomatch          # Disable ZSH annoying glob error
setopt APPEND_HISTORY     # Adds history
setopt INC_APPEND_HISTORY
setopt NO_BG_NICE         # Don't nice background tasks
setopt NO_HUP
setopt NO_LIST_BEEP
setopt LOCAL_OPTIONS      # Allow functions to have local options
setopt LOCAL_TRAPS        # Allow functions to have local traps
setopt HIST_VERIFY
setopt SHARE_HISTORY      # Share history between sessions ???
setopt EXTENDED_HISTORY   # Add timestamps to history
setopt PROMPT_SUBST
#setopt CORRECT
setopt COMPLETE_IN_WORD
setopt IGNORE_EOF
setopt HIST_IGNORE_ALL_DUPS  # Don't record dupes in history
setopt HIST_REDUCE_BLANKS


export DOTJITSU=$HOME/.dotjitsu
export DOTFILES=$HOME/.dotjitsu
export PRIVATE=$HOME/.private
export DOTJUTSU_FRAMEWORK="prezto"
export GEM_HOME=$HOME/.gem
export GOPATH=$HOME/.go
export HOMEBREW_AUTO_UPDATE_SECS=86400
#export DYLD_INSERT_LIBRARIES="/usr/local/lib/libstderred.dylib${DYLD_INSERT_LIBRARIES:+:$DYLD_INSERT_LIBRARIES}"

# Local node_modules takes presedence
export PATH="$HOME/.config/yarn/global/node_modules/.bin:$PATH"
export PATH="./node_modules/.bin:$PATH"
export PATH="$DOTJITSU/bin:$PATH"
export PATH="$PATH:$PRIVATE/bin"
export PATH="$PATH:$HOME/Library/Python/2.7/bin"
export PATH="$PATH:$HOME/.yarn/bin"
export PATH="$HOME/.repos/git-friendly:$PATH:"
export PATH="$HOME/bin/apache-maven-3.0.5/bin:$PATH:"
export PATH="/usr/local/opt/sqlite/bin:$PATH"

#
# Editors
#
export EDITOR='subl'
export VISUAL='/Users/johan/.dotjitsu/bin/subl'
export PAGER='less'
export BROWSER=chromium
export JAVA_HOME=$(greadlink -f /usr/bin/javac | sed "s:/bin/javac::")


export N_PREFIX="$HOME/n"; [[ :$PATH: == *":$N_PREFIX/bin:"* ]] || PATH+=":$N_PREFIX/bin"  # Added by n-install (see http://git.io/n-install-repo).

export HISTSIZE=100000
export SAVEHIST=100000
export HISTFILE=~/.zsh_history  # ensure history file visibility
export HH_CONFIG=hicolor        # get more colors

export VAGRANT_DEFAULT_PROVIDER=vmware_fusion

# GPG / Fix for signed commits
export GPG_TTY=$(tty)

export NODE_REPL_HISTORY=~/.tmp/node_repl_history 	# Enable persistent REPL history for `node`.
export NODE_REPL_HISTORY_SIZE='32768'               # Allow 32Â³ entries; the default is 1000.
export NODE_REPL_MODE='sloppy' 						# Use sloppy mode by default, matching web browsers.

